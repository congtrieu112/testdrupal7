  $lange_code = 0;
  if ($lang == 'en') {
    $lange_code = 1;
  }
  $comite_voca = taxonomy_vocabulary_machine_name_load('comite');
  if (isset($comite_voca->vid)) {
    $all_terms = taxonomy_get_tree($comite_voca->vid);
