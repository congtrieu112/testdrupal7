  $tax = taxonomy_term_load($tid);
  $persons = kandb_group_get_grouvernance_node($tid, $lange_code);
  return theme('group_finance_gouvernance', array('data' => $persons, 'tax' => $tax, 'voca' => $all_terms, 'term_id' => $tid, 'lang' => $lang));
}

