      'title' => 'Simulator',
      'page callback' => 'drupal_get_form',
      'page arguments' => array('kandb_simulator_admin_form'),
      'file' => 'kandb_simulator.admin.inc',
      'access arguments' => array('administer content'),
      'type' => MENU_LOCAL_TASK,
  );

  return $items;
}

