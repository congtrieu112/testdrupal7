/**
 * Menu autoloader for /kb_lot.
 */
function kb_lot_load($idkp, $reset = FALSE) {
  $kb_lot = kb_lot_load_multiple(array($idkp), array(), $reset);
  return reset($kb_lot);
}

/**
 * Load multiple kb_lot based on certain conditions.
 */
function kb_lot_load_multiple($idkp = array(), $conditions = array(), $reset = FALSE) {
  return entity_load('kb_lot', $idkp, $conditions, $reset);
}

