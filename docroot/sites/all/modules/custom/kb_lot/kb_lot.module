/**
 * Check access permission for Lot Entity UI.
 */
function kb_lot_access_menu_callback($op, $kb_lot = NULL, $account = NULL) {
  switch ($op) {
    case 'view':
      return user_access('view lot entities', $account);

    case 'create':
      return user_access('create lot entities', $account);

    case 'update':
      return user_access('edit lot entities', $account);

    case 'delete':
      return user_access('delete lot entities', $account);
  }

  return FALSE;
}

/**
 * Lot access callback.
 */
function kb_lot_access_callback() {
  if (user_is_anonymous() && !user_access('administer lot entities')) {
    return FALSE;
  } else {
    return TRUE;
  }
}

