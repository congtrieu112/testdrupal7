/**
 * Helper function for custom queries.
 */
function kb_lot_entity_query($conditions = array()) {

  $query = new EntityFieldQuery();
  $query->entityCondition('entity_type', 'kb_lot');

  // Apply conditions.
  foreach ($conditions as $key => $value) {
    $query->propertyCondition($key, $value);
  }

  $result = $query->execute();

  if (isset($result['kb_lot'])) {
    $kb_lot = array_keys($result['kb_lot']);
  } else {
    $kb_lot = array();
  }

  return $kb_lot;
}

